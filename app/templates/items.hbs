<h1>PRODUKTE</h1>

{{#each model as |item|}}
  <article>
    <button {{action "warenkorb_add" item}}>In den Warenkorb</button>
    {{#link-to "item" item}}
	<h3>{{item.name}}</h3>
    <div class="detail owner">
      <span>Preis:</span> {{item.price}}
    </div>
    <div class="detail owner">
      <span>Kategorie:</span> {{item.category.name}}
    </div>
	<div class="detail owner">
      <img src="{{item.image}}" style="width: 200px">
    </div>
	{{/link-to}}
  </article>
{{/each}}
